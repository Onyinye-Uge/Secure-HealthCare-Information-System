{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/css/dashboard.css">
  <title>{{ user.fullName }}'s Dashboard</title>
{% endblock %}

{% block content %}
<div class="container">
  <h2>Welcome, {{ user.fullName }}</h2>

  <form action="/update-profile" method="POST">
    <label>Email</label>
    <input type="email" name="email" value="{{ user.email }}" required>

    <label>Phone Number</label>
    <input type="text" name="phoneNumber" value="{{ user.phoneNumber }}" required>

    <label>Street Address</label>
    <input type="text" name="address[street]" value="{{ user.address.street }}">

    <label>City</label>
    <input type="text" name="address[city]" value="{{ user.address.city }}">

    <label>Province</label>
    <input type="text" name="address[province]" value="{{ user.address.province }}">

    <label>Postal Code</label>
    <input type="text" name="address[postalCode]" value="{{ user.address.postalCode }}">

    <button type="submit">Save Changes</button>
  </form>

  <a href="/change-password" class="change-password">ðŸ”’ Change Password</a>
</div>
{% endblock %}